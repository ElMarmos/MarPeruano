	.navbar
		-webkit-backface-visibility: hidden;
		-webkit-transform: translateZ(0);
		background-color black !important
		border 0 !important
		border-radius 0
		box-shadow none
		font-family AliensAndCows
		width 100%
		
		.navbar-collapse
			border-color rojo
		
			.nav
				li
					a
						color white
						font-size 24px
						padding 40px 40px
						
						&:hover
						&:focus
							color rojo
							
		.navbar-brand
			height initial
			left 15px
			margin auto
			padding 0 !important
			pointer-events none
			position absolute
			text-align center
			top 0
			width 100%
			
			img
				height 200px
				margin 0 auto
		
		.navbar-toggle
			border none
			background-color transparent !important
			z-index 3
			
			.icon-bar
				background-color white
				
			&:hover
				.icon-bar
					background-color: rojo
					
		@media screen and (max-width: 1200px)
			.navbar-brand
				img
					height 120px

			.navbar-collapse
				.nav
					li
						a
							padding 20px 15px
							font-size 20px
			
		
		@media screen and (max-width: 767px)

			.navbar-toggle
				margin-bottom 0
				margin-top 0
				padding 24px 10px

			.navbar-brand
				left 0
				img
					height 62px
					
			.navbar-collapse
				.nav
					li
						a
							padding 10px 15px
		
